{
  "files": [
    "src/WebHotKey.ts"
  ],
  "compilerOptions": {
    "target": "es2016",             /* 컴파일될 js에 관한 버전 설정 */
    "module": "es2015",             /* 생성될 module import, export 방식 */
    "rootDir": "./src",             /* 소스 파일의 root 경로 */
    "strict": true,                 /* 엄격한 타입 검사 옵션 */
    "removeComments": true,         /* 코멘트 제거 여부 */
    "skipLibCheck": true,           /* .d.ts 파일의 유형 검사를 건너뜀. 컴파일 시간 단축 */
  }
}
